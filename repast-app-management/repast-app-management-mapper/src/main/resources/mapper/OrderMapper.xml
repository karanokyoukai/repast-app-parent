  <select id="selectOrderByMemberId" parameterType="Long" resultType="map">
    select * from oms_order a
        join oms_order_item b on a.id = b.order_id
        where a.member_id = #{memberId}
  </select>

  <update id="cancelOrder" parameterType="Long">
    update oms_order set status = 5 where order_id = #{orderId}
  </update>

  <update id="deleteOrder" parameterType="Long">
